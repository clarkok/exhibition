#loading-wrapper
    overflow: hidden
    text-align: center
    height: 52px
    width: 100%
    position: relative;

    #loading
        display: inline-block
        overflow: hidden
        margin: 0
        padding: 0
        height: 20px
        width: 420px
        list-style: none
        position: absolute
        left: 50%
        margin-left: -210px
        bottom: -2em
        transition: all .5s

        &.show
            bottom: 2em

        .loading-circle
            position: absolute
            width: 20px
            height: 20px
            margin-left: -10px
            margin-top: -10px
            border-radius: 10px
            background-color: #FF28A8
            top: 50%
            animation: loading-animation .5s linear 0s infinite alternate

        #l1
            left: 10%
            animation-delay: 0

        #l2
            left: 30%
            animation-delay: 0.05s

        #l3
            left: 50%
            animation-delay: 0.1s

        #l4
            left: 70%
            animation-delay: 0.15s

        #l5
            left: 90%
            animation-delay: 0.2s

    #no-item

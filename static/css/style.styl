html, body
    margin: 0
    padding: 0
    background-color: #eee
    font-family: "MicrosoftYaHeiUILight"

body
    padding-top: 200px

header
    background-color: #FF28A8
    height: 200px
    width: 100%
    top: 0
    left: 0
    position: fixed
    transition: all .5s
    overflow: hidden
    z-index: 10

    h1
        color: #eee
        font-size: 200px
        margin: 0
        position: absolute
        bottom: -.18em
        transition: all .5s
        font-weight: 300
        line-height: 1em
        left: 0

    nav
        line-height: 30px
        position: absolute
        right: -100%
        transition: all .5s .5s

        a
            display: inline-block
            margin-right: 1em
            color: white
            text-decoration: none

header.thin
    height: 30px
    background-color: #BF0C9D

    h1
        font-size: 24px
        bottom: 0
        left: 1em
        line-height: 30px

    nav
        right: 0

#wrapper
    width: 1064px
    margin: 2em auto 0 auto
    overflow: hidden

    .column
        display: inline-block
        float: left
        width: 500px
        margin: 0 16px

        .block
            background-color: white
            box-sizing: border-box
            margin-bottom: 2em
            animation: fadein .5s ease-out

            .meta
                padding: 1em

                p
                    margin: 0

                .title
                    font-size: 1.5em
                    font-weight: 700

                .author
                    color: #aaa

                .time
                    color: #aaa
                    float: right

.img-wrapper
    min-height: 300px
    position: relative

    img
        opacity: 0
        animation: fadein .5s ease-out .2s
        animation-fill-mode: forwards

.progress
    circle-progress()
    top: 0
    left: 0

@keyframes loading-animation {

    from {
        width: 20px
        height: 20px
        margin-left: -10px
        margin-top: -10px
    }

    to {
        width: 0
        height: 0
        margin-left: 0
        margin-top: 0
    }
}

#loading-wrapper
    overflow: hidden
    text-align: center
    height: 52px
    width: 100%
    position: relative;

    #loading
        display: inline-block
        overflow: hidden
        margin: 0
        padding: 0
        height: 20px
        width: 420px
        list-style: none
        position: absolute
        left: 50%
        margin-left: -210px
        bottom: -2em
        transition: all .5s

        &.show
            bottom: 2em

        .loading-circle
            position: absolute
            width: 20px
            height: 20px
            margin-left: -10px
            margin-top: -10px
            border-radius: 10px
            background-color: #FF28A8
            top: 50%
            animation: loading-animation .5s linear 0s infinite alternate

        #l1
            left: 10%
            animation-delay: 0

        #l2
            left: 30%
            animation-delay: 0.05s

        #l3
            left: 50%
            animation-delay: 0.1s

        #l4
            left: 70%
            animation-delay: 0.15s

        #l5
            left: 90%
            animation-delay: 0.2s

    #no-item
        width: 12em
        height: 3em
        line-height: 3em
        background-color: #aaa
        color: #eee
        text-align: center
        position: absolute
        left: 50%
        margin-left: -6em
        bottom: -3em
        transition: all .5s
        
        &.show
            bottom: 0


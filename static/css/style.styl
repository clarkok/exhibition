        opacity: 0
        transform: rotate(-90deg)
        top: 100px
    }

    to {
        opacity: 1
        transform: rotate(0)
        top: 0
    }
}

#detail-wrapper
    width: 100%
    height: 0
    position: fixed
    left: 0
    top: 0
    padding-right: 300px
    box-sizing: border-box
    overflow-x: hidden
    overflow-y: visible
    z-index: 9
    transition: height 0 .5s, background-color .5s 0
    background-color: transparent

    &.show
        height: 100%
        transition: height 0 0, background-color .5s 0
        background-color: rgba(0, 0, 0, 0.5)

        #pic-detail
            left: 0

            img
                animation: fadein 1s
                animation-fill-mode: forwards
                transition: width .5s cubic-bezier(0.19, 1, 0.22, 1), height .5s cubic-bezier(0.19, 1, 0.22, 1), margin-left .5s cubic-bezier(0.19, 1, 0.22, 1), margin-top .5s cubic-bezier(0.19, 1, 0.22, 1)

        #meta
            right: 0

    #pic-detail
        height: 100%
        width: 100%
        overflow: hidden
        background-color: white
        position: relative
        left: -100%
        transition: all .5s
        z-index: 9

        img
            position: absolute

    #meta
        width: 300px
        height: 100%
        position: absolute
        right: 0
        top: 0
        box-sizing: border-box
        padding-top: 80px
        background-color: white
        right: -300px
        transition: all .5s
        z-index: 9

        #back
            width: 40px
            height: 40px
            border: 2px solid #FF28A8
            border-radius: 20px
            position: absolute
            top: 43px
            left: 16px
            box-sizing: border-box
            line-height: 38px
            text-align: center
            color: #FF28A8
            font-size: 24px
            cursor: pointer

        #detail
            margin: 0
            padding: 1em 0 0 1em
            list-style: none

            .detail-item
                transform-origin: 100% 0
                position: relative
                opacity: 0
                animation: detail-enterence .5s ease-out
                animation-fill-mode: forwards
                
                &.title-i
                    animation-delay: .5s
                
                &.author-i
                    animation-delay: .6s
                
                &.time-i
                    animation-delay: .7s
                
                &.detail-i
                    animation-delay: .8s

            label
                font-size: 0.8em
                font-weight: 700
                display: block
                border-bottom: 1px solid #FF28A8
                color: #FF28A8


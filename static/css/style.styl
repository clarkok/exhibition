circle-progress(front = #FF28A8, back = white, radius = 100px, depth = 20px)
    width: 2 * radius
    height: 2 * radius
    position: absolute
    margin-left: - radius
    margin-top: - radius
    overflow: hidden
    display: none

    &.finish

        .center-mask
            animation: center-mask-fadeout .2s ease-out
            animation-fill-mode: forwards

        .first-circle-color, .second-circle-color
            animation: color-fadeout .4s ease-out .1s
            animation-fill-mode: forwards

        .begin-circle, .end-circle
            display: none

    &.show
        display: block

        .first-circle-container, .second-circle-container
            width: radius
            height: 2 * radius
            overflow: hidden
            position: absolute
            left: 0
            top: 0
            transform-origin: 100% 50%

        .first-circle-color, .second-circle-color
            background-color: front
            width: 2 * radius
            height: 2 * radius
            border-radius: radius
            position: absolute
            left: 100%
            top: 50%
            margin-left: - radius
            margin-top: - radius

        .center-mask
            background-color: back
            width: 2 * (radius - depth)
            height: 2 * (radius - depth)
            border-radius: radius
            position: absolute
            left: 50%
            top: 50%
            margin-left: - (radius - depth)
            margin-top: - (radius - depth)

        .first-circle-mask
            background-color: back
            width: radius
            height: 2 * radius
            position: absolute
            top: -10px
            transform-origin: 100% 50%
            border-top: 10px solid white
            border-bottom: 10px solid white

        .begin-circle, .end-circle
            background-color: front
            width: depth
            height: depth
            border-radius: 0.5 * depth
            position: absolute

        .begin-circle, .end-circle
            top: 0.5 * depth
            left: 50%
            margin-left: -0.5 * depth
            margin-top: -0.5 * depth

        .second-circle-container
            display: none

        &.more-than-half
            .second-circle-container
                display: block
            .first-circle-mask
                display: none

